class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        vector<int> index(256, -1); // store last seen index of each ASCII char
        int maxLen = 0;
        int left = 0; // left boundary of the current window

        for (int right = 0; right < s.size(); ++right) {
            char c = s[right];

            // if the character was seen and is inside current window
            if (index[c] >= left) {
                left = index[c] + 1; // move left pointer
            }

            index[c] = right; // update last seen index
            maxLen = max(maxLen, right - left + 1);
        }

        return maxLen;
    }
};
